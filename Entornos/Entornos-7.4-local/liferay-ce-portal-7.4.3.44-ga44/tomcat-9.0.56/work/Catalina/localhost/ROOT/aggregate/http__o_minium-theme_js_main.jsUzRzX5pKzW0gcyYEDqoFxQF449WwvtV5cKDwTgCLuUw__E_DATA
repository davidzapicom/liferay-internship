function handleSearchBar(){Liferay.componentReady("search-bar").then((e=>{e.on("toggled",(e=>{document.querySelectorAll(".js-toggle-search").forEach((t=>{t.classList.toggle("is-active",e)})),document.getElementById("minium").classList.toggle("has-search",e)}))})).catch((e=>{console.error("Search bar not found!",e)}))}Liferay.on("allPortletsReady",(()=>{handleSearchBar();const e=document.querySelector(".js-scroll-area"),t=document.querySelector("[name=minium-top]");function n(e){return(e>0)-(e<0)||+e}e&&t&&new IntersectionObserver((e=>{document.getElementById("minium")&&document.getElementById("minium").classList.toggle("is-scrolled",!e[0].isIntersecting)}),{rootMargin:"0px",threshold:1}).observe(t);let o=0,s=0,r=!1;const c=new Map;c.set(-1,"up"),c.set(1,"down");const l=document.getElementById("minium");window.addEventListener("scroll",(()=>{const e=window.scrollY-o;o=window.scrollY,s=n(e)===n(s)?s+e:e,r||(window.requestAnimationFrame((()=>{Math.abs(s)>100&&(l.classList.add("is-scrolling-"+c.get(n(s))),l.classList.remove("is-scrolling-"+c.get(-1*n(s)))),r=!1})),r=!0)}),!1)}));
