<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="es.capgemini.practicas.sb.tienda">
	<namespace>PRACTICA_Tienda</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" table="PRACTICA_Tienda" name="Tienda" remote-service="false" uuid="true">

		<!-- PK fields -->
		<column name="id" primary="true" type="long" />

		<!-- Fields -->
		<column name="nombre" type="String" />
		<column name="direccion" type="String" />
		<column name="pais" type="String" />
		<column name="provincia" type="String" />
		<column name="ciudad" type="String" />
		<column name="codipoPostal" type="String" />
		<column name="gerente" type="String" />

		<!-- Order -->
		<order by="asc">
			<order-column name="nombre" />
		</order>
		
		<!-- Finder methods -->
		<finder name="Name" return-type="Collection">
			<finder-column name="nombre"/>
		</finder>
		
		<finder name="Loc" return-type="Collection">
			<finder-column name="pais"/>
			<finder-column name="provincia"/>
		</finder>
		
		
	</entity>
</service-builder>